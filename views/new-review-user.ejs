<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #1a365d 0%, #2d3748 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
        }
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        }
        .card-header {
            border-radius: 15px 15px 0 0 !important;
            font-weight: bold;
        }
        .movie-option {
            border: 2px solid #e2e8f0;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        .movie-option:hover {
            border-color: #4299e1;
            background-color: #f7fafc;
        }
        .movie-option.selected {
            border-color: #4299e1;
            background-color: #ebf8ff;
        }
        .movie-title {
            font-weight: bold;
            color: #2d3748;
            margin-bottom: 5px;
        }
        .movie-year {
            color: #718096;
            font-size: 0.9rem;
        }
        .movie-type {
            font-size: 0.8rem;
            padding: 2px 8px;
            border-radius: 12px;
            background: #e2e8f0;
            color: #4a5568;
        }
        .movie-type.movie { background: #bee3f8; color: #2b6cb0; }
        .movie-type.series { background: #fbb6ce; color: #97266d; }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">CineCr√≠ticas</a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/">‚Üê Volver al Inicio</a>
            </div>
        </div>
    </nav>
    
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h2 class="card-title mb-0">
                            <i class="fas fa-plus-circle"></i> Nueva Rese√±a
                        </h2>
                    </div>
                    <div class="card-body">
                        <!-- Mensajes -->
                        <% if (success) { %>
                            <div class="alert alert-success">
                                <i class="fas fa-check-circle"></i> <%= success %>
                            </div>
                        <% } %>

                        <% if (error) { %>
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-circle"></i> <%= error %>
                            </div>
                        <% } %>

                        <form action="/reviews/new" method="POST" id="reviewForm">
                            <!-- Selecci√≥n de pel√≠cula -->
                            <div class="mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-film"></i> Selecciona una Pel√≠cula/Serie:
                                </label>
                                
                                <% if (movies && movies.length > 0) { %>
                                    <div class="mb-3">
                                        <input type="text" id="movieSearch" class="form-control" 
                                               placeholder="Buscar pel√≠cula o serie..." 
                                               onkeyup="filterMovies()">
                                    </div>
                                    
                                    <div id="moviesList" class="mb-3" style="max-height: 400px; overflow-y: auto;">
                                        <% movies.forEach(function(movie) { %>
                                            <% if (movie.is_active) { %>
                                                <div class="movie-option" 
                                                     onclick="selectMovie('<%= movie.title %>', '<%= movie.year %>', '<%= movie.type %>', '<%= movie.genre %>')"
                                                     data-title="<%= movie.title.toLowerCase() %>"
                                                     data-year="<%= movie.year.toLowerCase() %>"
                                                     data-genre="<%= movie.genre.toLowerCase() %>">
                                                    <div class="d-flex justify-content-between align-items-start">
                                                        <div class="movie-title"><%= movie.title %></div>
                                                        <span class="movie-type <%= movie.type %>">
                                                            <%= movie.type === 'movie' ? 'üé¨ Pel√≠cula' : 'üì∫ Serie' %>
                                                        </span>
                                                    </div>
                                                    <div class="movie-year">
                                                        <%= movie.year %> ‚Ä¢ <%= movie.genre %>
                                                        <% if (movie.description) { %>
                                                            <br><small><%= movie.description.substring(0, 80) %>...</small>
                                                        <% } %>
                                                    </div>
                                                </div>
                                            <% } %>
                                        <% }); %>
                                    </div>
                                    
                                    <input type="hidden" id="movie_title" name="movie_title" required>
                                    <div id="selectedMovie" class="alert alert-info" style="display: none;">
                                        <i class="fas fa-check"></i> 
                                        <span id="selectedMovieText"></span>
                                    </div>
                                <% } else { %>
                                    <div class="alert alert-warning">
                                        <i class="fas fa-exclamation-triangle"></i>
                                        No hay pel√≠culas o series disponibles en este momento.
                                        <br>
                                        <small>Contacta con un administrador para agregar contenido.</small>
                                    </div>
                                <% } %>
                            </div>

                            <!-- T√≠tulo de la rese√±a -->
                            <div class="mb-3">
                                <label for="title" class="form-label">
                                    <i class="fas fa-heading"></i> T√≠tulo de tu Rese√±a:
                                </label>
                                <input type="text" class="form-control" id="title" name="title" 
                                       placeholder="Ej: 'Una obra maestra del cine moderno'" required>
                            </div>
                            
                            <!-- Calificaci√≥n -->
                            <div class="mb-3">
                                <label class="form-label">
                                    <i class="fas fa-star"></i> Tu Calificaci√≥n:
                                </label>
                                <div class="rating-stars mb-2">
                                    <span class="star" data-rating="1">‚òÖ</span>
                                    <span class="star" data-rating="2">‚òÖ</span>
                                    <span class="star" data-rating="3">‚òÖ</span>
                                    <span class="star" data-rating="4">‚òÖ</span>
                                    <span class="star" data-rating="5">‚òÖ</span>
                                </div>
                                <input type="hidden" id="rating" name="rating" value="5" required>
                                <div class="form-text">Haz clic en las estrellas para seleccionar tu calificaci√≥n</div>
                            </div>
                            
                            <!-- Contenido/Opini√≥n -->
                            <div class="mb-3">
                                <label for="content" class="form-label">
                                    <i class="fas fa-comment"></i> Tu Opini√≥n:
                                </label>
                                <textarea class="form-control" id="content" name="content" rows="6" 
                                          placeholder="Comparte tu opini√≥n sobre la pel√≠cula o serie. ¬øQu√© te gust√≥? ¬øQu√© no te gust√≥? ¬øRecomendar√≠as esta pel√≠cula?" required></textarea>
                            </div>
                            
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <button type="submit" class="btn btn-success me-md-2" id="submitBtn" 
                                        <%= (movies && movies.length > 0) ? '' : 'disabled' %>>
                                    <i class="fas fa-save"></i> Publicar Rese√±a
                                </button>
                                <a href="/" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="bg-dark text-white text-center py-3 mt-5">
        <div class="container">
            <p class="mb-0">CineCr√≠ticas &copy; 2024</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        let selectedRating = 5;
        let selectedMovie = null;

        // Sistema de rating con estrellas
        document.querySelectorAll('.star').forEach(star => {
            star.addEventListener('click', function() {
                selectedRating = parseInt(this.getAttribute('data-rating'));
                document.getElementById('rating').value = selectedRating;
                
                // Actualizar estrellas visualmente
                document.querySelectorAll('.star').forEach(s => {
                    const rating = parseInt(s.getAttribute('data-rating'));
                    if (rating <= selectedRating) {
                        s.style.color = '#ffc107';
                        s.style.textShadow = '0 0 5px rgba(255, 193, 7, 0.5)';
                    } else {
                        s.style.color = '#ddd';
                        s.style.textShadow = 'none';
                    }
                });
            });
            
            // Establecer color inicial
            const rating = parseInt(star.getAttribute('data-rating'));
            if (rating <= selectedRating) {
                star.style.color = '#ffc107';
                star.style.textShadow = '0 0 5px rgba(255, 193, 7, 0.5)';
            } else {
                star.style.color = '#ddd';
                star.style.textShadow = 'none';
            }
            
            // Efecto hover
            star.addEventListener('mouseover', function() {
                const hoverRating = parseInt(this.getAttribute('data-rating'));
                document.querySelectorAll('.star').forEach(s => {
                    const sRating = parseInt(s.getAttribute('data-rating'));
                    if (sRating <= hoverRating) {
                        s.style.transform = 'scale(1.2)';
                    }
                });
            });
            
            star.addEventListener('mouseout', function() {
                document.querySelectorAll('.star').forEach(s => {
                    s.style.transform = 'scale(1)';
                });
            });
        });

        // Selecci√≥n de pel√≠cula
        function selectMovie(title, year, type, genre) {
            selectedMovie = title;
            
            // Remover selecci√≥n anterior
            document.querySelectorAll('.movie-option').forEach(option => {
                option.classList.remove('selected');
            });
            
            // Agregar selecci√≥n actual
            event.currentTarget.classList.add('selected');
            
            // Actualizar campo oculto y mostrar selecci√≥n
            document.getElementById('movie_title').value = title;
            const typeText = type === 'movie' ? 'Pel√≠cula' : 'Serie';
            document.getElementById('selectedMovieText').textContent = `${typeText} seleccionada: ${title} (${year}) - ${genre}`;
            document.getElementById('selectedMovie').style.display = 'block';
            
            // Habilitar bot√≥n de env√≠o
            document.getElementById('submitBtn').disabled = false;
            
            // Sugerir t√≠tulo de rese√±a basado en la pel√≠cula
            const titleInput = document.getElementById('title');
            if (!titleInput.value) {
                const suggestions = [
                    `Mi opini√≥n sobre ${title}`,
                    `Rese√±a de ${title} - ${year}`,
                    `${title}: Una ${type === 'movie' ? 'pel√≠cula' : 'serie'} ${getRandomAdjective()}`,
                    `¬øVale la pena ver ${title}?`
                ];
                titleInput.placeholder = `Ej: '${suggestions[Math.floor(Math.random() * suggestions.length)]}'`;
            }
        }

        // Adjetivos aleatorios para sugerencias
        function getRandomAdjective() {
            const adjectives = ['incre√≠ble', 'fant√°stica', 'emocionante', 'inolvidable', 'genial', 'extraordinaria', 'maravillosa'];
            return adjectives[Math.floor(Math.random() * adjectives.length)];
        }

        // Filtro de b√∫squeda
        function filterMovies() {
            const searchTerm = document.getElementById('movieSearch').value.toLowerCase();
            const movies = document.querySelectorAll('.movie-option');
            let visibleCount = 0;
            
            movies.forEach(movie => {
                const title = movie.getAttribute('data-title');
                const year = movie.getAttribute('data-year');
                const genre = movie.getAttribute('data-genre');
                
                if (title.includes(searchTerm) || year.includes(searchTerm) || genre.includes(searchTerm)) {
                    movie.style.display = 'block';
                    visibleCount++;
                } else {
                    movie.style.display = 'none';
                }
            });
            
            // Mostrar mensaje si no hay resultados
            const noResults = document.getElementById('noResults');
            if (visibleCount === 0 && searchTerm) {
                if (!noResults) {
                    const noResultsDiv = document.createElement('div');
                    noResultsDiv.id = 'noResults';
                    noResultsDiv.className = 'alert alert-warning';
                    noResultsDiv.innerHTML = '<i class="fas fa-search"></i> No se encontraron pel√≠culas o series que coincidan con tu b√∫squeda.';
                    document.getElementById('moviesList').appendChild(noResultsDiv);
                }
            } else if (noResults) {
                noResults.remove();
            }
        }

        // Validaci√≥n del formulario
        document.getElementById('reviewForm').addEventListener('submit', function(e) {
            if (!selectedMovie) {
                e.preventDefault();
                alert('Por favor, selecciona una pel√≠cula antes de enviar la rese√±a.');
                return;
            }
            
            const title = document.getElementById('title').value.trim();
            const content = document.getElementById('content').value.trim();
            
            if (!title) {
                e.preventDefault();
                alert('Por favor, escribe un t√≠tulo para tu rese√±a.');
                document.getElementById('title').focus();
                return;
            }
            
            if (!content) {
                e.preventDefault();
                alert('Por favor, escribe tu opini√≥n sobre la pel√≠cula.');
                document.getElementById('content').focus();
                return;
            }
            
            if (content.length < 10) {
                e.preventDefault();
                alert('Tu opini√≥n es demasiado corta. Por favor, escribe al menos 10 caracteres.');
                document.getElementById('content').focus();
                return;
            }
            
            // Mostrar loading
            const submitBtn = document.getElementById('submitBtn');
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Publicando...';
            submitBtn.disabled = true;
        });

        // Inicializar estrellas
        document.querySelectorAll('.star').forEach(star => {
            const rating = parseInt(star.getAttribute('data-rating'));
            if (rating <= selectedRating) {
                star.style.color = '#ffc107';
                star.style.textShadow = '0 0 5px rgba(255, 193, 7, 0.5)';
            }
        });

        // Auto-focus en b√∫squeda
        document.getElementById('movieSearch')?.focus();
    </script>
</body>
</html>