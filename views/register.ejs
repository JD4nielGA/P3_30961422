<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #1a365d 0%, #2d3748 100%);
            min-height: 100vh;
            color: #333;
            display: flex;
            flex-direction: column;
        }

        .container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .auth-container {
            background: white;
            border-radius: 15px;
            padding: 40px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            width: 100%;
            max-width: 450px;
        }

        .auth-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .auth-header h2 {
            color: #2d3748;
            font-size: 2rem;
            margin-bottom: 10px;
        }

        .auth-header p {
            color: #718096;
            font-size: 1.1rem;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #4a5568;
        }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            outline: none;
            border-color: #4299e1;
            box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.1);
        }

        .btn {
            width: 100%;
            padding: 12px 20px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            transition: all 0.3s ease;
            font-size: 1rem;
        }

        .btn-primary {
            background: #4299e1;
            color: white;
        }

        .btn-primary:hover {
            background: #3182ce;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(66, 153, 225, 0.3);
        }

        .btn-secondary {
            background: #718096;
            color: white;
        }

        .btn-secondary:hover {
            background: #4a5568;
        }

        .alert {
            padding: 15px 20px;
            border-radius: 8px;
            margin-bottom: 20px;
            border-left: 4px solid;
        }

        .alert-error {
            background: #fed7d7;
            color: #c53030;
            border-color: #e53e3e;
        }

        .alert-success {
            background: #c6f6d5;
            color: #276749;
            border-color: #48bb78;
        }

        .auth-footer {
            text-align: center;
            margin-top: 25px;
            padding-top: 20px;
            border-top: 1px solid #e2e8f0;
        }

        .auth-footer a {
            color: #4299e1;
            text-decoration: none;
            font-weight: 600;
        }

        .auth-footer a:hover {
            text-decoration: underline;
        }

        .password-requirements {
            font-size: 0.85rem;
            color: #718096;
            margin-top: 5px;
        }

        .nav-header {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            padding: 15px 0;
            margin-bottom: 30px;
        }

        .nav-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 1.5rem;
            font-weight: bold;
            color: white;
            text-decoration: none;
        }

        .nav-links {
            display: flex;
            gap: 20px;
        }

        .nav-links a {
            color: white;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .nav-links a:hover {
            color: #4299e1;
        }

        footer {
            background: #2d3748;
            color: white;
            text-align: center;
            padding: 20px;
            margin-top: auto;
        }

        @media (max-width: 768px) {
            .auth-container {
                padding: 30px 20px;
                margin: 20px;
            }

            .nav-container {
                flex-direction: column;
                gap: 15px;
            }

            .nav-links {
                gap: 15px;
            }
        }
    </style>
</head>
<body>
    <!-- Header Navigation -->
    <nav class="nav-header">
        <div class="nav-container">
            <a href="/" class="logo">
                <i class="fas fa-film"></i>
                CineCríticas
            </a>
            <div class="nav-links">
                <a href="/">Inicio</a>
                <a href="/login">Iniciar Sesión</a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        <div class="auth-container">
            <div class="auth-header">
                <h2>Crear Cuenta</h2>
                <p>Únete a nuestra comunidad cinéfila</p>
            </div>

            <!-- Alert Messages -->
            <% if (error) { %>
                <div class="alert alert-error">
                    <i class="fas fa-exclamation-circle"></i> <%= error %>
                </div>
            <% } %>

            <% if (success) { %>
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i> <%= success %>
                </div>
            <% } %>

            <form action="/auth/register" method="POST">
                <div class="form-group">
                    <label for="username">
                        <i class="fas fa-user"></i> Nombre de Usuario:
                    </label>
                    <input type="text" 
                           id="username" 
                           name="username" 
                           class="form-control" 
                           value="<%= typeof username !== 'undefined' ? username : '' %>"
                           required 
                           placeholder="Elige un nombre de usuario"
                           minlength="3"
                           maxlength="30">
                    <div class="password-requirements">
                        Mínimo 3 caracteres, máximo 30
                    </div>
                </div>

                <div class="form-group">
                    <label for="email">
                        <i class="fas fa-envelope"></i> Correo Electrónico:
                    </label>
                    <input type="email" 
                           id="email" 
                           name="email" 
                           class="form-control" 
                           value="<%= typeof email !== 'undefined' ? email : '' %>"
                           required 
                           placeholder="tu@email.com">
                </div>

                <div class="form-group">
                    <label for="password">
                        <i class="fas fa-lock"></i> Contraseña:
                    </label>
                    <input type="password" 
                           id="password" 
                           name="password" 
                           class="form-control" 
                           required 
                           placeholder="Crea una contraseña segura"
                           minlength="6">
                    <div class="password-requirements">
                        Mínimo 6 caracteres
                    </div>
                </div>

                <div class="form-group">
                    <label for="confirmPassword">
                        <i class="fas fa-lock"></i> Confirmar Contraseña:
                    </label>
                    <input type="password" 
                           id="confirmPassword" 
                           name="confirmPassword" 
                           class="form-control" 
                           required 
                           placeholder="Repite tu contraseña">
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-user-plus"></i> Crear Cuenta
                </button>
            </form>

            <div class="auth-footer">
                <p>
                    ¿Ya tienes cuenta? 
                    <a href="/login">Inicia sesión aquí</a>
                </p>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <p>&copy; 2024 CineCríticas. Todos los derechos reservados.</p>
            <p>Comparte tus opiniones sobre películas y series con nuestra comunidad.</p>
        </div>
    </footer>

    <script>
        // Validación del formulario en el cliente
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            const password = document.getElementById('password');
            const confirmPassword = document.getElementById('confirmPassword');

            form.addEventListener('submit', function(e) {
                const username = document.getElementById('username').value.trim();
                const email = document.getElementById('email').value.trim();
                const passwordValue = password.value;
                const confirmPasswordValue = confirmPassword.value;

                // Validar nombre de usuario
                if (username.length < 3) {
                    e.preventDefault();
                    alert('El nombre de usuario debe tener al menos 3 caracteres.');
                    document.getElementById('username').focus();
                    return;
                }

                if (username.length > 30) {
                    e.preventDefault();
                    alert('El nombre de usuario no puede tener más de 30 caracteres.');
                    document.getElementById('username').focus();
                    return;
                }

                // Validar email
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!emailRegex.test(email)) {
                    e.preventDefault();
                    alert('Por favor, introduce un email válido.');
                    document.getElementById('email').focus();
                    return;
                }

                // Validar contraseña
                if (passwordValue.length < 6) {
                    e.preventDefault();
                    alert('La contraseña debe tener al menos 6 caracteres.');
                    password.focus();
                    return;
                }

                // Validar que las contraseñas coincidan
                if (passwordValue !== confirmPasswordValue) {
                    e.preventDefault();
                    alert('Las contraseñas no coinciden. Por favor, verifica.');
                    confirmPassword.focus();
                    return;
                }

                // Mostrar loading
                const submitBtn = form.querySelector('button[type="submit"]');
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Creando cuenta...';
                submitBtn.disabled = true;
            });

            // Validación en tiempo real de contraseñas
            confirmPassword.addEventListener('input', function() {
                if (password.value !== confirmPassword.value) {
                    confirmPassword.style.borderColor = '#e53e3e';
                } else {
                    confirmPassword.style.borderColor = '#48bb78';
                }
            });

            password.addEventListener('input', function() {
                if (password.value !== confirmPassword.value && confirmPassword.value !== '') {
                    confirmPassword.style.borderColor = '#e53e3e';
                } else if (confirmPassword.value !== '') {
                    confirmPassword.style.borderColor = '#48bb78';
                }
            });

            // Auto-focus en el primer campo
            document.getElementById('username').focus();
        });
    </script>
</body>
</html>