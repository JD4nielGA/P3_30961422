    <script>
        // Contador regresivo para membres√≠as activas
        function updateCountdown() {
            <% if (typeof user !== 'undefined' && user.membership_type && user.membership_type !== 'free' && user.membership_expires) { %>
                const expiryDate = new Date('<%= user.membership_expires %>');
                const now = new Date();
                const diff = expiryDate - now;
                
                if (diff > 0) {
                    const days = Math.floor(diff / (1000 * 60 * 60 * 24));
                    const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                    const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                    
                    document.getElementById('countdown').innerHTML = 
                        `${days} d√≠as, ${hours} horas, ${minutes} minutos restantes`;
                } else {
                    document.getElementById('countdown').innerHTML = 'Membres√≠a expirada';
                }
            <% } %>
        }

        async function purchaseMembership(planType) {
            if (!confirm(`¬øEst√°s seguro de que quieres comprar la membres√≠a ${planType.toUpperCase()} por 30 d√≠as?\n\nPrecio: ‚Ç¨9.99`)) {
                return;
            }

            try {
                const response = await fetch('/api/user/membership/purchase', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        plan_type: planType,
                        duration_days: 30
                    })
                });

                const result = await response.json();

                if (result.success) {
                    alert('¬°Membres√≠a VIP adquirida exitosamente! Tu acceso premium est√° activo por 30 d√≠as.');
                    location.reload();
                } else {
                    alert('Error: ' + result.error);
                }
            } catch (error) {
                alert('Error al procesar la compra: ' + error.message);
            }
        }

        function downgradeToFree() {
            if (confirm('¬øEst√°s seguro de que quieres volver al plan gratuito?\n\nPerder√°s todos los beneficios VIP cuando tu membres√≠a actual expire.')) {
                alert('Volver√°s autom√°ticamente al plan gratuito cuando expire tu membres√≠a VIP.');
            }
        }

        // Actualizar contador cada minuto
        setInterval(updateCountdown, 60000);
        updateCountdown(); // Ejecutar inmediatamente
    </script>
