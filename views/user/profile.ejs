<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/user-profile.css">
    <style>
        .profile-actions {
            margin-top: 30px;
            padding: 20px;
            background: #f7fafc;
            border-radius: 10px;
        }

        .profile-actions h2 {
            margin-bottom: 15px;
            color: #2d3748;
            font-size: 1.1em;
        }

        .action-links {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .action-link {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 10px 15px;
            background: white;
            border-radius: 8px;
            text-decoration: none;
            color: #4a5568;
            border: 1px solid #e2e8f0;
            transition: all 0.3s ease;
        }

        .action-link:hover {
            background: #4299e1;
            color: white;
            border-color: #4299e1;
            transform: translateX(5px);
        }

        .action-icon {
            width: 20px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="user-container">
        <div class="user-sidebar">
            <h3>Mi Cuenta</h3>
            <nav class="user-menu">
                <a href="/user/profile" class="<%= currentPath === '/user/profile' ? 'active' : '' %>">Perfil</a>
                <a href="/user/my-reviews" class="<%= currentPath === '/user/my-reviews' ? 'active' : '' %>">Mis Rese침as</a>
                <a href="/user/purchase-history" class="<%= currentPath === '/user/purchase-history' ? 'active' : '' %>">Historial de Compras</a>
                <a href="/user/membership" class="<%= currentPath === '/user/membership' ? 'active' : '' %>">Membres칤as</a>
            </nav>
            
            <div class="profile-actions">
                <h2>Acciones R치pidas</h2>
                <div class="action-links">
                    <a href="/reviews/new" class="action-link">
                        <span class="action-icon">九꽲잺</span>
                        Escribir Nueva Rese침a
                    </a>
                    <a href="/user/my-reviews" class="action-link">
                        <span class="action-icon">游닇</span>
                        Ver todas mis rese침as
                    </a>
                    <a href="/" class="action-link">
                        <span class="action-icon">游</span>
                        Volver al Inicio
                    </a>
                </div>
            </div>
        </div>
        
        <div class="user-content">
            <h1>Mi Perfil</h1>
            
            <div class="profile-card">
                <h2>Informaci칩n Personal</h2>
                <form id="profileForm">
                    <div class="form-group">
                        <label>Nombre completo:</label>
                        <input type="text" name="full_name" value="<%= user.full_name || '' %>">
                    </div>
                    
                    <div class="form-group">
                        <label>Email:</label>
                        <input type="email" name="email" value="<%= user.email %>" required>
                    </div>
                    
                    <div class="form-group">
                        <label>Nombre de usuario:</label>
                        <input type="text" value="<%= user.username %>" disabled>
                        <small>El nombre de usuario no se puede cambiar</small>
                    </div>
                    
                    <h3>Cambiar contrase침a</h3>
                    <div class="form-group">
                        <label>Contrase침a actual:</label>
                        <input type="password" name="current_password">
                    </div>
                    
                    <div class="form-group">
                        <label>Nueva contrase침a:</label>
                        <input type="password" name="new_password">
                    </div>
                    
                    <button type="submit" class="btn-primary">Guardar cambios</button>
                </form>
            </div>
            
            <div class="stats-card">
                <h2>Estad칤sticas</h2>
                <div class="stats-grid">
                    <div class="stat-item">
                        <span class="stat-number"><%= reviews.length %></span>
                        <span class="stat-label">Rese침as escritas</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number"><%= user.membership_type || 'free' %></span>
                        <span class="stat-label">Membres칤a actual</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('profileForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            
            try {
                const response = await fetch('/api/user/profile', {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(Object.fromEntries(formData))
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('Perfil actualizado correctamente');
                    location.reload();
                } else {
                    alert('Error: ' + result.error);
                }
            } catch (error) {
                alert('Error al actualizar el perfil');
            }
        });
    </script>
</body>
</html>