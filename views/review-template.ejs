<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= review.movie_title %> - CineCríticas</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #1a202c 0%, #2d3748 100%);
            min-height: 100vh;
            color: #fff;
            line-height: 1.6;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Header */
        header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 20px 30px;
            margin-bottom: 30px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        }

        .header-top {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 1.5rem;
            font-weight: bold;
            color: #2d3748;
            text-decoration: none;
        }

        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background: #4299e1;
            color: white;
        }

        .btn-secondary {
            background: #718096;
            color: white;
        }

        .btn:hover {
            transform: translateY(-2px);
        }

        /* Movie Hero Section */
        .movie-hero {
            display: grid;
            grid-template-columns: 300px 1fr;
            gap: 40px;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 40px;
            margin-bottom: 30px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            color: #2d3748;
        }

        .movie-poster {
            width: 100%;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s ease;
        }

        .movie-poster:hover {
            transform: scale(1.05);
        }

        .movie-info {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .movie-title {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 15px;
            color: #2d3748;
        }

        .movie-meta {
            display: flex;
            align-items: center;
            gap: 20px;
            margin-bottom: 20px;
            flex-wrap: wrap;
        }

        .rating {
            display: flex;
            align-items: center;
            gap: 10px;
            background: #ffd700;
            color: #000;
            padding: 8px 15px;
            border-radius: 25px;
            font-weight: bold;
        }

        .review-count {
            color: #718096;
            font-weight: 500;
        }

        .movie-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 15px;
            margin: 25px 0;
        }

        .stat {
            text-align: center;
            padding: 15px;
            background: #f7fafc;
            border-radius: 10px;
        }

        .stat-number {
            font-size: 1.5rem;
            font-weight: bold;
            color: #4299e1;
        }

        .stat-label {
            font-size: 0.9rem;
            color: #718096;
        }

        /* Review Content */
        .review-content {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 40px;
            margin-bottom: 30px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            color: #2d3748;
        }

        .review-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 25px;
            padding-bottom: 20px;
            border-bottom: 2px solid #e2e8f0;
        }

        .review-title {
            font-size: 2rem;
            font-weight: bold;
            color: #2d3748;
        }

        .review-meta {
            text-align: right;
        }

        .review-author {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 10px;
            font-weight: 500;
        }

        .review-date {
            color: #718096;
            font-size: 0.9rem;
        }

        .review-text {
            font-size: 1.1rem;
            line-height: 1.8;
            margin-bottom: 30px;
        }

        .review-text p {
            margin-bottom: 15px;
        }

        /* Other Reviews Section */
        .other-reviews {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            color: #2d3748;
        }

        .section-title {
            font-size: 1.5rem;
            margin-bottom: 20px;
            color: #2d3748;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .reviews-list {
            display: grid;
            gap: 15px;
        }

        .review-item {
            padding: 20px;
            background: #f7fafc;
            border-radius: 10px;
            border-left: 4px solid #4299e1;
        }

        .review-item-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

        .review-item-author {
            font-weight: 500;
            color: #2d3748;
        }

        .review-item-rating {
            color: #ffc107;
        }

        .review-item-content {
            color: #4a5568;
            line-height: 1.6;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .movie-hero {
                grid-template-columns: 1fr;
                text-align: center;
            }

            .movie-poster {
                max-width: 250px;
                margin: 0 auto;
            }

            .movie-meta {
                justify-content: center;
            }

            .review-header {
                flex-direction: column;
                gap: 15px;
            }

            .review-meta {
                text-align: left;
            }

            .header-top {
                flex-direction: column;
                gap: 15px;
            }
        }

        /* Featured Badge */
        .featured-badge {
            background: linear-gradient(135deg, #ffd700, #ffed4e);
            color: #000;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: bold;
            display: inline-flex;
            align-items: center;
            gap: 5px;
            margin-left: 10px;
        }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,0.5);
            align-items: center;
            justify-content: center;
            z-index: 9999;
        }

        .modal-content {
            background: #fff;
            color: #2d3748;
            border-radius: 12px;
            padding: 24px;
            width: 90%;
            max-width: 480px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.3);
        }

        .author-info {
            background: #f7fafc;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 20px;
            border-left: 4px solid #4299e1;
        }

        .author-name {
            font-weight: bold;
            color: #2d3748;
            margin-bottom: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <header>
            <div class="header-top">
                <a href="/" class="logo">
                    <i class="fas fa-film"></i>
                    <span>CineCríticas</span>
                </a>
                <div>
                    <a href="/" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i>Volver al Inicio
                    </a>
                    <a href="/reviews/new" class="btn btn-primary">
                        <i class="fas fa-plus"></i>Nueva Reseña
                    </a>
                </div>
            </div>
        </header>

        <!-- Movie Hero Section -->
        <section class="movie-hero">
            <div class="movie-poster-container">
                <img src="<%= imageUrl || '/images/default-poster.jpg' %>" 
                     alt="<%= review.movie_title || 'Película' %>" 
                     class="movie-poster"
                     onerror="this.src='/images/default-poster.jpg'">
                <% if (!imageUrl || imageUrl === '/images/default-poster.jpg') { %>
                    <div style="text-align: center; color: #718096; font-size: 0.9rem; margin-top: 10px;">
                        <i class="fas fa-image"></i> Imagen no disponible
                    </div>
                <% } %>
            </div>
            
            <div class="movie-info">
                <h1 class="movie-title">
                    <%= review.movie_title || 'Título no disponible' %>
                    <% if (review.is_featured) { %>
                        <span class="featured-badge">
                            <i class="fas fa-star"></i>DESTACADA
                        </span>
                    <% } %>
                </h1>
                
                <div class="movie-meta">
                    <div class="rating">
                        <i class="fas fa-star"></i>
                        <span><%= review.rating %>/5</span>
                    </div>
                </div>

                <!-- Información del autor simplificada -->
                <div class="author-info">
                    <div class="author-name">
                        <i class="fas fa-user-edit"></i>
                        Reseña creada por: <%= review.username || 'Usuario desconocido' %>
                    </div>
                </div>

                <div style="margin-top: 20px;">
                    <a href="/reviews/new?movie=<%= encodeURIComponent(review.movie_title) %>" 
                       class="btn btn-primary">
                        <i class="fas fa-edit"></i>Escribir Reseña
                    </a>
                    <!-- Comprar: botón para iniciar flujo de compra -->
                    <% const _price = (typeof product !== 'undefined' && product && product.price) ? product.price : (review.price || 3.99); %>
                    <button class="btn btn-primary" id="buyButton" style="margin-left: 10px; background: #e53e3e;">
                        <i class="fas fa-shopping-cart"></i> Comprar - <%= Number(_price).toFixed(2) %> €
                    </button>
                </div>
            </div>
        </section>

        <!-- Main Review Content -->
        <section class="review-content">
            <div class="review-header">
                <div>
                    <h2 class="review-title"><%= review.title || 'Sin título' %></h2>
                    <div class="rating" style="background: transparent; color: #ffc107; padding: 0; margin-top: 5px;">
                        <% for (let i = 0; i < 5; i++) { %>
                            <% if (i < review.rating) { %>
                                <i class="fas fa-star"></i>
                            <% } else { %>
                                <i class="far fa-star"></i>
                            <% } %>
                        <% } %>
                        <span style="color: #718096; margin-left: 5px;">(<%= review.rating %>/5)</span>
                    </div>
                </div>
                <div class="review-meta">
                    <div class="review-author">
                        <i class="fas fa-user"></i>
                        <%= review.username || 'Usuario desconocido' %>
                    </div>
                </div>
            </div>

            <div class="review-text">
                <% if (review.content && review.content.trim()) { %>
                    <% const paragraphs = review.content.split('\n').filter(p => p.trim()); %>
                    <% paragraphs.forEach(paragraph => { %>
                        <p><%= paragraph %></p>
                    <% }); %>
                <% } else { %>
                    <p style="color: #718096; font-style: italic;">Esta reseña no tiene contenido.</p>
                <% } %>
            </div>

            <!-- Acciones para el autor o admin -->
            <div style="display: flex; gap: 10px; justify-content: center; margin-top: 30px; flex-wrap: wrap;">
                <a href="/reviews/new?movie=<%= encodeURIComponent(review.movie_title) %>" 
                   class="btn btn-primary">
                    <i class="fas fa-edit"></i>Escribir Tu Reseña
                </a>
                <% if (user && (user.id === review.user_id || user.role === 'admin')) { %>
                    <a href="/admin/reviews/<%= review.id %>/edit" 
                       class="btn btn-secondary" style="background: #38a169;">
                        <i class="fas fa-cog"></i>Editar Reseña
                    </a>
                <% } %>
            </div>
        </section>
    </div>

    <!-- Modal de compra corregido -->
    <div id="purchaseModal" class="modal">
        <div class="modal-content">
            <h3 style="margin-bottom:8px;">Comprar: <%= review.movie_title %></h3>
            <p style="color:#4a5568; margin-bottom:16px;">Precio: <strong><%= Number(_price).toFixed(2) %> €</strong></p>
            
            <% if (!user) { %>
                <div style="background:#fff6f6; border:1px solid #fed7d7; padding:12px; border-radius:8px; color:#742a2a; margin-bottom:16px;">
                    <i class="fas fa-exclamation-triangle"></i>
                    Debes <a href="/auth/login" style="color:#e53e3e; font-weight:bold;">iniciar sesión</a> para completar la compra.
                </div>
                <div style="display:flex; gap:8px; justify-content:flex-end;">
                    <button class="btn btn-secondary" id="closeModalBtn">Cerrar</button>
                    <a href="/auth/login" class="btn btn-primary" style="background:#e53e3e;">
                        <i class="fas fa-sign-in-alt"></i>Iniciar Sesión
                    </a>
                </div>
            <% } else { %>
                <form id="purchaseForm" method="POST" action="/purchase/create" style="display:flex; flex-direction:column; gap:12px;">
                    <input type="hidden" name="movie_id" value="<%= review.movie_id %>">
                    <input type="hidden" name="movie_title" value="<%= review.movie_title %>">
                    <input type="hidden" name="amount" value="<%= _price %>">
                    <input type="hidden" name="type" value="movie">
                    
                    <div style="background:#f0fff4; border:1px solid #9ae6b4; padding:12px; border-radius:8px; color:#276749;">
                        <i class="fas fa-info-circle"></i>
                        Estás a punto de comprar: <strong><%= review.movie_title %></strong>
                    </div>
                    
                    <div style="display:flex; gap:8px; justify-content:flex-end;">
                        <button type="button" class="btn btn-secondary" id="closeModalBtn2">Cancelar</button>
                        <button type="submit" class="btn btn-primary" id="confirmPurchaseBtn" style="background:#e53e3e;">
                            <i class="fas fa-credit-card"></i> Confirmar Compra
                        </button>
                    </div>
                </form>
            <% } %>
        </div>
    </div>

    <script>
        // Efectos de hover para la imagen
        const poster = document.querySelector('.movie-poster');
        if (poster) {
            poster.addEventListener('mouseenter', function() {
                this.style.transform = 'scale(1.05)';
            });
            
            poster.addEventListener('mouseleave', function() {
                this.style.transform = 'scale(1)';
            });
        }

        // Purchase modal logic corregido
        (function() {
            const buyBtn = document.getElementById('buyButton');
            const modal = document.getElementById('purchaseModal');
            const closeModalBtn = document.getElementById('closeModalBtn');
            const closeModalBtn2 = document.getElementById('closeModalBtn2');
            const purchaseForm = document.getElementById('purchaseForm');
            const confirmBtn = document.getElementById('confirmPurchaseBtn');

            function openModal() {
                if (modal) {
                    modal.style.display = 'flex';
                    document.body.style.overflow = 'hidden';
                }
            }

            function closeModal() {
                if (modal) {
                    modal.style.display = 'none';
                    document.body.style.overflow = 'auto';
                }
            }

            if (buyBtn) {
                buyBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    openModal();
                });
            }

            if (closeModalBtn) closeModalBtn.addEventListener('click', closeModal);
            if (closeModalBtn2) closeModalBtn2.addEventListener('click', closeModal);

            // Cerrar modal al hacer click fuera
            if (modal) {
                modal.addEventListener('click', function(e) {
                    if (e.target === modal) {
                        closeModal();
                    }
                });
            }

            if (purchaseForm && confirmBtn) {
                purchaseForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    // UX: deshabilitar botón para evitar doble envió
                    confirmBtn.disabled = true;
                    confirmBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Procesando...';
                    
                    // Simular envío del formulario
                    setTimeout(() => {
                        // Redirección corregida
                        window.location.href = '/purchase/checkout?movie_id=<%= review.movie_id %>&movie_title=<%= encodeURIComponent(review.movie_title) %>&amount=<%= _price %>';
                    }, 1500);
                });
            }

            // Cerrar con ESC
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    closeModal();
                }
            });
        })();
    </script>
</body>
</html>