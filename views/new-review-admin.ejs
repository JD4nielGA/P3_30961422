<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #1a365d 0%, #2d3748 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
        }
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        }
        .card-header {
            border-radius: 15px 15px 0 0 !important;
            font-weight: bold;
        }
        .movie-option {
            border: 2px solid #e2e8f0;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        .movie-option:hover {
            border-color: #4299e1;
            background-color: #f7fafc;
        }
        .movie-option.selected {
            border-color: #4299e1;
            background-color: #ebf8ff;
        }
        .movie-title {
            font-weight: bold;
            color: #2d3748;
            margin-bottom: 5px;
        }
        .movie-year {
            color: #718096;
            font-size: 0.9rem;
        }
        .movie-poster {
            width: 60px;
            height: 90px;
            object-fit: cover;
            border-radius: 5px;
            margin-right: 15px;
        }
        .movie-item {
            display: flex;
            align-items: center;
            padding: 10px;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            margin-bottom: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        .movie-item:hover {
            background-color: #f8f9fa;
            border-color: #4299e1;
        }
        .movie-item.selected {
            background-color: #e3f2fd;
            border-color: #4299e1;
        }
        .movie-info {
            flex: 1;
        }
        .image-preview {
            max-width: 200px;
            max-height: 300px;
            object-fit: cover;
            border-radius: 8px;
            margin-top: 10px;
            display: none;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">CineCríticas</a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/admin">← Volver al Panel</a>
            </div>
        </div>
    </nav>
    
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h2 class="card-title mb-0">
                            <i class="fas fa-plus-circle"></i> Nueva Reseña (Admin)
                        </h2>
                    </div>
                    <div class="card-body">
                        <% if (success) { %>
                            <div class="alert alert-success">
                                <i class="fas fa-check-circle"></i> <%= success %>
                            </div>
                        <% } %>

                        <% if (error) { %>
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-circle"></i> <%= error %>
                            </div>
                        <% } %>

                        <form action="/admin/reviews/new" method="POST" enctype="multipart/form-data">
                            <!-- Selección de película desde base de datos -->
                            <div class="mb-4">
                                <label class="form-label fw-bold">Selecciona una Película/Serie:</label>
                                
                                <% if (movies && movies.length > 0) { %>
                                    <div class="mb-3">
                                        <input type="text" id="movieSearch" class="form-control" 
                                               placeholder="Buscar película o serie..." 
                                               onkeyup="filterMovies()">
                                    </div>
                                    
                                    <div id="moviesList" class="mb-3" style="max-height: 400px; overflow-y: auto;">
                                        <% movies.forEach(function(movie) { %>
                                            <% if (movie.is_active) { %>
                                                <div class="movie-item" 
                                                     onclick="selectMovie(<%= movie.id %>, '<%= movie.title %>', '<%= movie.poster_url %>')"
                                                     data-title="<%= movie.title.toLowerCase() %>"
                                                     data-year="<%= movie.year.toLowerCase() %>"
                                                     data-genre="<%= movie.genre.toLowerCase() %>">
                                                    <img src="<%= movie.poster_url %>" 
                                                         alt="<%= movie.title %>" 
                                                         class="movie-poster"
                                                         onerror="this.src='/images/default-poster.jpg'">
                                                    <div class="movie-info">
                                                        <div class="movie-title"><%= movie.title %></div>
                                                        <div class="movie-year">
                                                            <%= movie.year %> • <%= movie.genre %>
                                                            <% if (movie.description) { %>
                                                                <br><small><%= movie.description.substring(0, 80) %>...</small>
                                                            <% } %>
                                                        </div>
                                                    </div>
                                                </div>
                                            <% } %>
                                        <% }); %>
                                    </div>
                                    
                                    <input type="hidden" id="movie_id" name="movie_id">
                                    <input type="hidden" id="movie_title" name="movie_title">
                                    <input type="hidden" id="poster_url" name="poster_url">
                                    
                                    <div id="selectedMovie" class="alert alert-info" style="display: none;">
                                        <i class="fas fa-check"></i> 
                                        <span id="selectedMovieText"></span>
                                        <img id="selectedPoster" src="" class="image-preview">
                                    </div>
                                <% } else { %>
                                    <div class="alert alert-warning">
                                        <i class="fas fa-exclamation-triangle"></i>
                                        No hay películas o series disponibles.
                                    </div>
                                <% } %>
                            </div>

                            <!-- Selección de usuario -->
                            <div class="mb-3">
                                <label for="user_id" class="form-label">Usuario Autor:</label>
                                <select class="form-select" id="user_id" name="user_id" required>
                                    <% if (users && users.length > 0) { %>
                                        <% users.forEach(function(u) { %>
                                            <option value="<%= u.id %>"><%= u.username %> (<%= u.email %>)</option>
                                        <% }); %>
                                    <% } else { %>
                                        <option value="">No hay usuarios disponibles</option>
                                    <% } %>
                                </select>
                            </div>

                            <!-- Título de la reseña -->
                            <div class="mb-3">
                                <label for="title" class="form-label">Título de la Reseña:</label>
                                <input type="text" class="form-control" id="title" name="title" required>
                            </div>
                            
                            <!-- Calificación -->
                            <div class="mb-3">
                                <label for="rating" class="form-label">Calificación:</label>
                                <select class="form-select" id="rating" name="rating" required>
                                    <option value="1">1 ★ - Muy mala</option>
                                    <option value="2">2 ★★ - Regular</option>
                                    <option value="3">3 ★★★ - Buena</option>
                                    <option value="4">4 ★★★★ - Muy buena</option>
                                    <option value="5" selected>5 ★★★★★ - Excelente</option>
                                </select>
                            </div>
                            
                            <!-- Contenido/Opinión -->
                            <div class="mb-3">
                                <label for="content" class="form-label">Contenido:</label>
                                <textarea class="form-control" id="content" name="content" rows="6" required></textarea>
                            </div>
                            <!-- Opciones adicionales -->
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="is_featured" name="is_featured" value="true">
                                <label class="form-check-label" for="is_featured">Reseña Destacada</label>
                            </div>
                            
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <button type="submit" class="btn btn-success me-md-2" id="submitBtn" 
                                        <%= (movies && movies.length > 0) ? '' : 'disabled' %>>
                                    <i class="fas fa-save"></i> Crear Reseña
                                </button>
                                <a href="/admin" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="bg-dark text-white text-center py-3 mt-5">
        <div class="container">
            <p class="mb-0">CineCríticas &copy; 2024 - Panel de Administración</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        let selectedMovieId = null;
        let selectedMovieTitle = null;
        let selectedPosterUrl = null;

        // Selección de película
        function selectMovie(movieId, movieTitle, posterUrl) {
            selectedMovieId = movieId;
            selectedMovieTitle = movieTitle;
            selectedPosterUrl = posterUrl;
            
            // Remover selección anterior
            document.querySelectorAll('.movie-item').forEach(item => {
                item.classList.remove('selected');
            });
            
            // Agregar selección actual
            event.currentTarget.classList.add('selected');
            
            // Actualizar campos ocultos
            document.getElementById('movie_id').value = movieId;
            document.getElementById('movie_title').value = movieTitle;
            document.getElementById('poster_url').value = posterUrl;
            
            // Mostrar selección
            document.getElementById('selectedMovieText').textContent = `Película seleccionada: ${movieTitle}`;
            const selectedPoster = document.getElementById('selectedPoster');
            selectedPoster.src = posterUrl;
            selectedPoster.style.display = 'block';
            document.getElementById('selectedMovie').style.display = 'block';
            
            // Habilitar botón de envío
            document.getElementById('submitBtn').disabled = false;
            
            // Sugerir título
            const titleInput = document.getElementById('title');
            if (!titleInput.value) {
                titleInput.placeholder = `Ej: 'Mi reseña de ${movieTitle}'`;
            }
        }

        // Filtro de búsqueda
        function filterMovies() {
            const searchTerm = document.getElementById('movieSearch').value.toLowerCase();
            const movies = document.querySelectorAll('.movie-item');
            let visibleCount = 0;
            
            movies.forEach(movie => {
                const title = movie.getAttribute('data-title');
                const year = movie.getAttribute('data-year');
                const genre = movie.getAttribute('data-genre');
                
                if (title.includes(searchTerm) || year.includes(searchTerm) || genre.includes(searchTerm)) {
                    movie.style.display = 'flex';
                    visibleCount++;
                } else {
                    movie.style.display = 'none';
                }
            });
        }

        // Vista previa de imagen
        function previewImage(input) {
            const preview = document.getElementById('imagePreview');
            const file = input.files[0];
            
            if (file) {
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                }
                
                reader.readAsDataURL(file);
            } else {
                preview.style.display = 'none';
            }
        }

        // Validación del formulario
        document.querySelector('form').addEventListener('submit', function(e) {
            if (!selectedMovieId) {
                e.preventDefault();
                alert('Por favor, selecciona una película antes de enviar la reseña.');
                return;
            }
            
            const title = document.getElementById('title').value.trim();
            const content = document.getElementById('content').value.trim();
            
            if (!title) {
                e.preventDefault();
                alert('Por favor, escribe un título para la reseña.');
                return;
            }
            
            if (!content) {
                e.preventDefault();
                alert('Por favor, escribe el contenido de la reseña.');
                return;
            }
            
            // Validar tamaño de imagen
            const fileInput = document.getElementById('review_image');
            if (fileInput.files[0]) {
                const fileSize = fileInput.files[0].size / 1024 / 1024; // MB
                if (fileSize > 5) {
                    e.preventDefault();
                    alert('La imagen es demasiado grande. El tamaño máximo permitido es 5MB.');
                    return;
                }
            }
            
            // Mostrar loading
            const submitBtn = document.getElementById('submitBtn');
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Creando...';
            submitBtn.disabled = true;
        });

        // Auto-focus en búsqueda
        document.getElementById('movieSearch')?.focus();
    </script>
</body>
</html>